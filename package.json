{
	"name": "dynmail",
	"description": "A modern and dynamic Email SDK written in TypeScript",
	"version": "1.0.3",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/landuci/dynmail.git"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"email",
		"mail",
		"sdk",
		"typescript",
		"resend",
		"plunk",
		"ses",
		"aws",
		"smtp"
	],
	"sideEffects": false,
	"packageManager": "bun@1.3.3",
	"devDependencies": {
		"@ark/attest": "^0.55.0",
		"@biomejs/biome": "2.3.8",
		"@types/bun": "1.3.3",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.14",
		"msw": "2.12.3",
		"typescript": "5.9.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "4.0.14"
	},
	"scripts": {
		"build": "bun run build.ts && bun run build:types",
		"build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly --declaration --outDir dist",
		"test": "vitest",
		"format": "bunx biome format --write",
		"lint": "bunx biome lint && tsc --noEmit",
		"prepublishOnly": "bun run build",
		"publish": "bun run scripts/publish.ts"
	}
}
